<UserControl x:Class="PlayGround.View.UserNewTurfBookingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayGround.View"
             mc:Ignorable="d" 
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             TextElement.FontWeight="Medium"
             TextElement.FontSize="14"
             FontFamily="{materialDesign:MaterialDesignFont}"
             d:DesignHeight="750" d:DesignWidth="1100">
    <Grid>
        <Grid>
            <Button
            Style="{DynamicResource MaterialDesignToolButton}">
                <materialDesign:PackIcon Kind="Search" Opacity="10" Margin="-148,-359" HorizontalAlignment="Right"/>
            </Button>
            <TextBox
            Margin="341,10,0,0"
            materialDesign:HintAssist.Hint="Search Turf Location"
            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
            BorderThickness="0"
            MinWidth="10"
                HorizontalAlignment="Left"
            VerticalAlignment="Top" Height="31" Width="322" />
        </Grid>

        <Grid Margin="12,-250,0,0">
            <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" Height="100">
                <DataGrid.Columns >
                    <DataGridTextColumn Header="Turf ID"></DataGridTextColumn>
                    <DataGridTextColumn Header="Turf Name"></DataGridTextColumn>
                    <DataGridTextColumn Header="Turf Location"></DataGridTextColumn>
                    <DataGridTextColumn Header="Opening Time"></DataGridTextColumn>
                    <DataGridTextColumn Header="Closing Time"></DataGridTextColumn>
                    <DataGridTextColumn Header="State"></DataGridTextColumn>
                    <DataGridTextColumn Header="City"></DataGridTextColumn>
                    <DataGridTextColumn Header="Zip"></DataGridTextColumn>
                    <DataGridTextColumn Header="Amount"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="302*"/>
                <ColumnDefinition Width="221*"/>
            </Grid.ColumnDefinitions>-->
        </Grid>
        <materialDesign:Card Margin="25,150,0,0" Height="300" Width="500"  >
            <materialDesign:Card.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </materialDesign:Card.Resources>
            <StackPanel Orientation="Horizontal">
                <Label x:Name="lblStartTime" Content="Time Slote" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,40,0,0" FontSize="20"/>
                <materialDesign:PackIcon Kind="Clock" Width="25" Height="25" Margin="5,46,0,0"/>
                <ComboBox x:Name="cbTimeSlote" Width="150" VerticalAlignment="Top" VerticalContentAlignment="Center" Margin="20,40,0,0"
                            materialDesign:HintAssist.Hint="Start Time" FontSize="20" />
                <ComboBox x:Name="cbEndTime" Width="150"  VerticalAlignment="Top" VerticalContentAlignment="Center" Margin="20,40,0,0"
                            materialDesign:HintAssist.Hint="End Time" FontSize="20"/>
                <StackPanel Orientation="Horizontal">
                    <Label x:Name="lblAmount" Content="Amount" Margin="-474,90,0,0"  VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20"/>
                    <materialDesign:PackIcon Kind="Rupee" Width="25" Height="25" Margin="-370,96,0,0"  VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Label x:Name="lblPrice" Content="1200" Margin="-300,90,0,0" Width="80" FontSize="20" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left"/>

                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label x:Name="lblPayment" Content="Payment"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-474,140,0,0" FontSize="20"/>
                    <materialDesign:PackIcon Kind="Payment" Width="25" Height="25" Margin="-370,146,0,0"  VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ComboBox x:Name="cbModeOfPayment" Width="190" VerticalAlignment="Top" VerticalContentAlignment="Center" Margin="-450,140,0,0"
                            materialDesign:HintAssist.Hint="Mode Of Payment" FontSize="20"/>
                </StackPanel>
                <StackPanel>
                    <Button Content="Book Now" x:Name="btnBookNow" FontSize="16" FontWeight="Bold" Margin="-490,210,0,0"  Foreground="White" Background="DarkGreen" RenderTransformOrigin="0.582,0.626" Style="{DynamicResource RoundCorner}" Height="36" Width="172">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>

        </materialDesign:Card>

    </Grid>
</UserControl>
